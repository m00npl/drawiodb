{
  "name": "drawio-golem-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for DrawIO Golem DB Plugin",
  "main": "index.js",
  "scripts": {
    "test": "node runner.js",
    "test:api": "jest tests/api --detectOpenHandles --forceExit",
    "test:ui": "jest tests/ui --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --detectOpenHandles --forceExit",
    "test:performance": "jest tests/performance --detectOpenHandles --forceExit",
    "test:all": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:ci": "node runner.js --ci",
    "test:report": "node utils/report-generator.js",
    "test:clean": "rimraf reports screenshots",
    "browser:chrome": "TEST_BROWSER=chrome npm test",
    "browser:firefox": "TEST_BROWSER=firefox npm test",
    "headless:false": "TEST_HEADLESS=false npm test",
    "report": "node scripts/generate-report.js",
    "smoke": "jest api/smoke.test.js --detectOpenHandles --forceExit",
    "smoke:ui": "jest ui/smoke-ui.test.js --detectOpenHandles --forceExit",
    "smoke:all": "jest --testPathPattern='smoke' --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "selenium-webdriver": "^4.15.0",
    "jest": "^29.7.0",
    "axios": "^1.6.0",
    "puppeteer": "^21.5.0",
    "html-reporter": "^1.0.0",
    "fs-extra": "^11.1.1",
    "chalk": "^4.1.2",
    "table": "^6.8.1",
    "rimraf": "^5.0.5",
    "jest-junit": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/selenium-webdriver": "^4.1.20"
  }
}