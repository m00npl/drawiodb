# DrawIO DB - Secure Environment Configuration Template
#
# IMPORTANT: This file contains only non-sensitive configuration
# All sensitive values (private keys, passwords) are managed by Vault
#
# Copy this to .env and customize for your environment

# Application Configuration
NODE_ENV=production
PORT=3000

# Arkiv DB Configuration (Non-sensitive)
ARKIV_CHAIN_ID=60138453025
ARKIV_RPC_URL=https://kaolin.hoodi.arkiv.network/rpc
ARKIV_WS_URL=wss://https://kaolin.hoodi.arkiv.network/rpc/rpc/ws

# Vault Configuration
VAULT_ADDR=http://vault:8200
# VAULT_APP_TOKEN will be injected by deployment script

# Redis Configuration (Connection string only - password from Vault)
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD managed by Vault

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true

# Security Configuration
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=https://drawiodb.online,https://api.drawiodb.online

# Feature Flags
ENABLE_SHARING=true
ENABLE_ENCRYPTION=true
ENABLE_USER_TIERS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
# S3_BUCKET and AWS credentials managed by Vault

# Notification Configuration
NOTIFICATIONS_ENABLED=true
# WEBHOOK_URL managed by Vault

#############################################
# NEVER PUT THESE IN .env FILES:
# - Private keys
# - Database passwords
# - API secrets
# - JWT secrets
# - Encryption keys
# - Third-party API keys
#############################################